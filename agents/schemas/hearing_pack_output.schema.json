{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HearingPackOutput",
  "type": "object",
  "required": ["session_id", "hearing_pack_path", "exhibit_map", "proposed_findings", "issues_for_court", "provenance"],
  "properties": {
    "session_id": { "type": "string" },
    "hearing_pack_path": { "type": "string", "description": "Filesystem path or download URL to hearing_pack.docx" },
    "exhibit_map": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["exhibit_id", "file_name", "purpose"],
        "properties": {
          "exhibit_id": { "type": "string" },
          "file_name": { "type": "string" },
          "purpose": { "type": "string" },
          "linked_elements": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "proposed_findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["finding_id", "text", "quote_spans"],
        "properties": {
          "finding_id": { "type": "string" },
          "text": { "type": "string" },
          "quote_spans": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["quote", "doc_id", "page", "line_range"],
              "properties": {
                "quote": { "type": "string" },
                "doc_id": { "type": "string" },
                "page": { "type": "integer" },
                "line_range": { "type": "string" }
              }
            }
          },
          "corroborating_docs": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "issues_for_court": {
      "type": "array",
      "items": { "type": "string" }
    },
    "recommended_orders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "order_text": { "type": "string" },
          "statutory_basis": { "type": ["string", "null"] }
        }
      }
    },
    "notes": { "type": "string" },
    "provenance": { "type": "object" }
  }
}

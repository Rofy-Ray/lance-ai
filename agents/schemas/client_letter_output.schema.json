{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClientLetterOutput",
  "type": "object",
  "required": ["session_id", "client_letter_path", "readability_grade", "collection_checklist", "provenance"],
  "properties": {
    "session_id": { "type": "string" },
    "client_letter_path": { "type": "string", "description": "Filesystem path or download URL to client_letter.txt or .pdf" },
    "readability_grade": { "type": "number", "minimum": 0 },
    "main_findings": {
      "type": "array",
      "items": { "type": "string" }
    },
    "safety_steps": {
      "type": "array",
      "items": { "type": "string" }
    },
    "collection_checklist": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "why", "template", "priority"],
        "properties": {
          "item": { "type": "string" },
          "why": { "type": "string" },
          "template": { "type": "string" },
          "priority": { "type": "integer", "minimum": 1 }
        }
      }
    },
    "resource_box": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "url": { "type": ["string", "null"] },
          "phone": { "type": ["string", "null"] },
          "notes": { "type": ["string", "null"] }
        }
      }
    },
    "disclaimer": { "type": "string" },
    "provenance": { "type": "object" }
  }
}
